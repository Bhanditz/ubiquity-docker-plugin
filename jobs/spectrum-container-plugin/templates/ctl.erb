#!/bin/bash
set -e -x

RUN_DIR=/var/vcap/sys/run/spectrum-container-plugin
LOG_DIR=/var/vcap/sys/log/spectrum-container-plugin
PIDFILE=${RUN_DIR}/pid

source /var/vcap/packages/spectrum_pid_utils/pid_utils.sh
case $1 in

start)
    pid_guard $PIDFILE "spectrum-container-plugin"
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR
    export GOMAXPROCS=$(nproc)
    export GODEUG=netdns=cgo
    mkdir /tmp/spectrumGold
    mkdir /tmp/spectrumBronze

    echo $$ > $PIDFILE
    ulimit -n 100000

    chpst -u root:root /var/vcap/packages/spectrum-container-plugin/go/bin/main \
       --listenAddr="127.0.0.1" --listenPort=9001 --pluginsDirectory="/var/vcap/data/voldrivers" --mountpath="/gpfs/bronze"  --logPath=/tmp/spectrumBronze --filesystem=bronze\
       2> >(tee -a $LOG_DIR/spectrum-container-plugin.stderr.log | logger -p user.error -t vcap.spectrum-container-plugin) \
       1> >(tee -a $LOG_DIR/spectrum-container-plugin.stdout.log | logger -p user.info -t vcap.spectrum-container-plugin &

    # start plugin server
    exec chpst -u root:root /var/vcap/packages/spectrum-container-plugin/go/bin/main \
      --listenAddr="127.0.0.1" --listenPort=9000 --pluginsDirectory="/var/vcap/data/voldrivers" --mountpath="/gpfs/gold"  --logPath=/tmp/spectrumGold --filesystem=gold\
      2> >(tee -a $LOG_DIR/spectrum-container-plugin.stderr.log | logger -p user.error -t vcap.spectrum-container-plugin) \
      1> >(tee -a $LOG_DIR/spectrum-container-plugin.stdout.log | logger -p user.info -t vcap.spectrum-container-plugin

    ;;


  stop)
    kill_and_wait $PIDFILE
    ;;

  *)
    echo "Usage: spectrum_plugin_ctl {start|stop}" ;;

esac

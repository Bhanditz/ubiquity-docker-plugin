#!/bin/bash
set -e
export GOPATH=${BOSH_INSTALL_TARGET}/go
mkdir -p $GOPATH/src/github.ibm.com/almaden-containers/spectrum-container-plugin.git
ls
cp -a . $GOPATH/src/github.ibm.com/almaden-containers/spectrum-container-plugin.git
export GOROOT=/var/vcap/packages/spectrum_golang/go
export GOBIN=$GOPATH/bin
export PATH=$GOBIN:$GOROOT/bin:$PATH
pushd $GOPATH/src/github.ibm.com/almaden-containers/spectrum-container-plugin.git
go install main.go
popd
ls
cp -a gpfs/*.deb ${BOSH_INSTALL_TARGET}/